@model ChatMail.Models.ProfileViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Profil</title>
    <link href="https://cdn.lineicons.com/3.0/lineicons.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f6fa;
            margin: 0;
            padding: 40px 0;
            display: flex;
            justify-content: center;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
            padding: 30px 40px;
            width: 100%;
            max-width: 420px;
            text-align: center;
            position: relative;
        }

        .logout-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            font-size: 24px;
            color: #7175F9;
            text-decoration: none;
        }

        .profile-img {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #7175F9;
            margin-bottom: 20px;
        }

        h4 {
            font-weight: 700;
            margin-bottom: 5px;
            color: #333;
            font-size: 24px;
        }

        .text-muted {
            color: #888;
            font-size: 14px;
            margin-bottom: 25px;
        }

        .alert {
            background-color: #d4edda;
            color: #155724;
            border-radius: 6px;
            padding: 12px 15px;
            margin-bottom: 25px;
            font-weight: 600;
            text-align: center;
        }

        ul.list-group {
            list-style: none;
            padding: 0;
            margin-bottom: 30px;
            text-align: left;
        }

        ul.list-group li {
            padding: 12px 0;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 16px;
            color: #555;
        }

        a.btn {
            display: inline-block;
            background-color: #7175F9;
            color: white;
            padding: 10px 28px;
            border-radius: 30px;
            font-weight: 600;
            text-decoration: none;
            margin-bottom: 20px;
        }

        a.btn:hover {
            background-color: #595cd8;
            color: white;
        }

        #toggleBtn {
            cursor: pointer;
            color: #7175F9;
            font-weight: 700;
            font-size: 18px;
            margin-bottom: 20px;
            user-select: none;
        }

        .form-group {
            margin-bottom: 18px;
            text-align: left;
        }

        input.form-control {
            width: 100%;
            padding: 10px;
            border: 1.8px solid #ccc;
            border-radius: 6px;
            font-size: 15px;
            box-sizing: border-box;
        }

        .text-danger {
            color: #d9534f;
            font-size: 13px;
        }

        button.btn-success {
            background-color: #28a745;
            border: none;
            padding: 12px 28px;
            color: white;
            font-size: 16px;
            border-radius: 30px;
            font-weight: 700;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button.btn-success:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <div class="card">
        <a href="/Login/UserLogin" class="logout-btn" title="Çıkış Yap">
            <i class="lni lni-exit"></i>
        </a>


        <h4><i class="lni lni-user" style="color:#7175F9;"></i> @Model.Name @Model.Surname</h4>
        <p class="text-muted">Türkiye</p>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success" id="successMessage">
                @ViewBag.Message
            </div>
        }

        <ul class="list-group">
            <li><i class="lni lni-phone"></i><strong> Telefon:</strong> @Model.PhoneNumber</li>
            <li><i class="lni lni-envelope"></i><strong> E-Posta:</strong> @Model.Email</li>
        </ul>

        <a href="/Message/Inbox" class="btn"><i class="lni lni-inbox"></i> Mesajlarıma Git</a>

        <div id="toggleBtn"><i class="lni lni-pencil"></i> Güncelle</div>

        <form asp-action="Profile" method="post" class="toggle-form" id="profileForm" style="display:none;">
            <div class="form-group">
                <label asp-for="Name"><i class="lni lni-user"></i> Ad</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"><i class="lni lni-user"></i> Soyad</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"><i class="lni lni-envelope"></i> E-Posta</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"><i class="lni lni-phone"></i> Telefon</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImageUrl"><i class="lni lni-picture"></i> Profil Resmi URL</label>
                <input asp-for="ProfileImageUrl" class="form-control" />
                <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(function () {
            $("#toggleBtn").click(function () {
                $("#profileForm").slideToggle(300);
            });

            if ($("#successMessage").length) {
                $("#profileForm").slideUp(300);
                setTimeout(function () {
                    $("#successMessage").fadeOut(500);
                }, 3000);
            }
        });
    </script>
</body>
</html>
