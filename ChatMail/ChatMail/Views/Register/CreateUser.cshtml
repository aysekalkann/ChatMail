@model RegisterViewModel
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Email & Chat Kayıt Formu</title>
    <style>
   body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f5f6fa;
    margin: 0;
    padding: 20px 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.register-card {
    background: #fff;
    padding: 40px 30px;
    border-radius: 10px;
    box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    width: 100%;
    max-width: 360px;
    text-align: center;
    margin: 20px;
    box-sizing: border-box;
}


        .register-card h4 {
            font-weight: 700;
            margin-bottom: 30px;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 40px;
            font-size: 15px;
            border: 1.8px solid #ccc;
            border-radius: 6px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #7175F9;
            outline: none;
        }

        .btn-submit {
            background-color: #7175F9;
            border: none;
            color: white;
            font-weight: 600;
            padding: 12px 0;
            width: 100%;
            border-radius: 30px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        .btn-submit:hover {
            background-color: #595cd8;
        }

        .text-danger {
            color: #d9534f;
            margin-bottom: 20px;
            font-size: 14px;
            text-align: left;
        }

        .footer-text {
            font-size: 14px;
            color: #555;
            margin-top: 20px;
        }

        .footer-text a {
            color: #7175F9;
            text-decoration: none;
            font-weight: 600;
        }

        .footer-text a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="register-card">
        <h4>Email & Chat Kayıt Formu</h4>

        <form method="post" novalidate>
            <input asp-for="Name" class="form-control" placeholder="Adınız" required />
            <input asp-for="Surname" class="form-control" placeholder="Soyadınız" required />
            <input asp-for="Email" type="email" class="form-control" placeholder="Email Adresiniz" required />
            <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adınız" required />
            <input asp-for="Password" type="password" class="form-control" placeholder="Şifreniz" required />
            
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <button type="submit" class="btn-submit">Kayıt Ol</button>
        </form>

        <p class="footer-text">
            Bir hesabın var mı? <a href="/Login/UserLogin">Giriş Yap</a>
        </p>
    </div>

</body>
</html>
